{
  "name": "proyecto-monis-torias-arqui",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test:backend": "cd functions && npm test",
    "test:frontend": "cd frontend && npm run test:run",
    "test:all": "npm run test:backend && npm run test:frontend",
    "allure:generate": "allure generate allure/allure-results --clean -o allure/allure-report",
    "allure:open": "allure open allure/allure-report",
    "allure:serve": "allure serve allure/allure-results",
    "allure:clean": "rimraf allure/allure-results/* allure/allure-report/*",
    "security:zap": "pwsh -File scripts/zap-scan.ps1"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "firebase": "^12.1.0"
  }
}
