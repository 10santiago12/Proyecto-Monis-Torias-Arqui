{
  "info": {
    "name": "Monis-Torias API",
    "_postman_id": "monis-torias-api-collection",
    "description": "API REST para el sistema de tutorías Monis-Torias. Incluye endpoints para sesiones, pagos, tutores y materiales.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Health Check",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has ok property\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('ok');",
                  "    pm.expect(jsonData.ok).to.be.true;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            },
            "description": "Verifica el estado del servidor"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Sessions",
      "item": [
        {
          "name": "List Sessions",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response is an array\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.be.an('array');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/sessions",
              "host": ["{{baseUrl}}"],
              "path": ["sessions"]
            },
            "description": "Lista sesiones según el rol del usuario (manager: todas, tutor: sus sesiones, estudiante: sus sesiones)"
          },
          "response": []
        },
        {
          "name": "Request Session",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Response has session id\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.environment.set(\"sessionId\", jsonData.id);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tutorCode\": \"{{tutorCode}}\",\n  \"topic\": \"Matemáticas Avanzadas\",\n  \"description\": \"Necesito ayuda con cálculo integral\",\n  \"durationMin\": 60,\n  \"preferredAt\": \"2025-01-25T14:00:00Z\",\n  \"currency\": \"COP\",\n  \"price\": 50000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/sessions/request",
              "host": ["{{baseUrl}}"],
              "path": ["sessions", "request"]
            },
            "description": "Solicitar una sesión de tutoría con un código de tutor"
          },
          "response": []
        },
        {
          "name": "Confirm Session (Tutor)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Session is confirmed\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status).to.equal('confirmed');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"scheduledAt\": \"2025-01-25T15:00:00Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/sessions/{{sessionId}}/confirm",
              "host": ["{{baseUrl}}"],
              "path": ["sessions", "{{sessionId}}", "confirm"]
            },
            "description": "El tutor confirma y agenda una sesión"
          },
          "response": []
        },
        {
          "name": "Mark Done (Student)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Session is marked as done\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status).to.equal('done');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/sessions/{{sessionId}}/done",
              "host": ["{{baseUrl}}"],
              "path": ["sessions", "{{sessionId}}", "done"]
            },
            "description": "El estudiante marca una sesión como completada"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Request Payout (Tutor)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Payment request created\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.environment.set(\"paymentId\", jsonData.id);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sessionId\": \"{{sessionId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/payments/request",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "request"]
            },
            "description": "El tutor solicita pago por una sesión completada"
          },
          "response": []
        },
        {
          "name": "Approve Payout (Manager)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Payment is approved\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status).to.equal('approved');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/payments/{{paymentId}}/approve",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "{{paymentId}}", "approve"]
            },
            "description": "El manager aprueba un pago solicitado"
          },
          "response": []
        },
        {
          "name": "Mark Paid (Manager)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Payment is marked as paid\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status).to.equal('paid');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/payments/{{paymentId}}/paid",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "{{paymentId}}", "paid"]
            },
            "description": "El manager marca un pago como realizado"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Tutors",
      "item": [
        {
          "name": "List Tutors (Manager)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response is an array\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.be.an('array');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tutors",
              "host": ["{{baseUrl}}"],
              "path": ["tutors"]
            },
            "description": "Lista todos los tutores registrados (solo manager)"
          },
          "response": []
        },
        {
          "name": "Assign Code to Tutor (Manager)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Code is assigned\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('code');",
                  "    pm.expect(jsonData).to.have.property('uid');",
                  "    pm.environment.set(\"tutorCode\", jsonData.code);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"note\": \"Tutor de Matemáticas\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tutors/{{tutorUid}}/assign-code",
              "host": ["{{baseUrl}}"],
              "path": ["tutors", "{{tutorUid}}", "assign-code"]
            },
            "description": "Asignar código de tutor a un usuario (solo manager)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Materials",
      "item": [
        {
          "name": "List Materials",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response is an array\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.be.an('array');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/materials",
              "host": ["{{baseUrl}}"],
              "path": ["materials"]
            },
            "description": "Lista todos los materiales disponibles"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://127.0.0.1:5001/proyecto-arqui-2c418/us-central1/api",
      "type": "string"
    }
  ]
}
