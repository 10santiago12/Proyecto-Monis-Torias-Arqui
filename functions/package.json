{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "private": true,
  "main": "src/index.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "build": "echo 'No build needed for Firebase Functions'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest test/unit --coverage",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration",
    "postman": "newman run postman/collection.json -e postman/environment.dev.json",
    "postman:prod": "newman run postman/collection.json -e postman/environment.prod.json",
    "postman:report": "newman run postman/collection.json -e postman/environment.dev.json -r htmlextra --reporter-htmlextra-export postman/report.html"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "allure-jest": "^3.4.2",
    "eslint": "^8.57.1",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-react": "^7.37.5",
    "firebase-functions-test": "^3.1.0",
    "globals": "^16.3.0",
    "jest": "^30.2.0",
    "newman": "^6.2.1",
    "newman-reporter-htmlextra": "^1.23.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "typescript-eslint": "^8.39.1"
  }
}
