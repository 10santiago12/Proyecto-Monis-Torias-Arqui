@startuml vista-escenarios
title Vista de Escenarios - Casos de Uso

left to right direction

actor "Estudiante" as student
actor "Tutor" as tutor
actor "Manager" as manager

rectangle "Monis-Torias" {
  
  package "Sesiones" {
    usecase "Solicitar Sesión" as UC01
    usecase "Confirmar Sesión" as UC02
    usecase "Ver Sesiones" as UC03
    usecase "Marcar Completada" as UC04
  }
  
  package "Materiales" {
    usecase "Consultar Materiales" as UC05
    usecase "Subir Material" as UC06
  }
  
  package "Pagos" {
    usecase "Solicitar Pago" as UC07
    usecase "Aprobar Pago" as UC08
    usecase "Ver Ganancias" as UC09
  }
  
  package "Admin" {
    usecase "Listar Tutores" as UC10
    usecase "Asignar Código" as UC11
  }
  
  package "Auth" {
    usecase "Iniciar Sesión" as UC12
    usecase "Cerrar Sesión" as UC13
  }
}

actor "Firebase\nAuth" as fbauth
actor "FCM" as fcm
actor "Storage" as storage

' Estudiante
student --> UC01
student --> UC03
student --> UC04
student --> UC05
student --> UC12
student --> UC13

' Tutor
tutor --> UC02
tutor --> UC03
tutor --> UC06
tutor --> UC07
tutor --> UC09
tutor --> UC12
tutor --> UC13

' Manager
manager --> UC08
manager --> UC10
manager --> UC11
manager --> UC12
manager --> UC13

' Externos
UC12 --> fbauth
UC06 --> storage
UC01 --> fcm
UC02 --> fcm

' Relaciones
UC01 ..> UC02 : <<triggers>>
UC04 ..> UC07 : <<enables>>
UC07 ..> UC08 : <<requires>>

@enduml
