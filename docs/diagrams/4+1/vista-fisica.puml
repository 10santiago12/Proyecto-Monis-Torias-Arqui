@startuml vista-fisica
title Vista FÃ­sica - Despliegue Firebase

actor "Usuarios" as users

cloud "Firebase Platform" {
  node "Hosting\nCDN" as hosting {
    artifact "React SPA" as webapp
  }
  
  node "Cloud Functions\nus-central1" as functions {
    artifact "API Backend\nNode.js 20" as api
  }
  
  database "Firestore" as db
  database "Auth" as auth
  database "Storage" as storage
  node "FCM" as fcm
}

cloud "CI/CD" {
  node "GitHub Actions" as gha
  node "Security\nScans" as security
}

node "Development" as dev {
  artifact "Vite Dev" as vitedev
  artifact "Emulators" as emu
}

' Conexiones
users --> hosting : HTTPS
hosting --> webapp
webapp --> api : REST
api --> auth
api --> db
api --> storage
api --> fcm

gha --> security
gha --> functions : deploy
gha --> hosting : deploy

dev --> vitedev
dev --> emu

@enduml
